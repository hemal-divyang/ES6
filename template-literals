//TEMPLATE LITRAL

`${}`
in `${}` we can use variable, function call and turnary operation

let productName = 'laptop';
let quantity = 2;
let status = 'pending';
function estimateDelivery(){
return "2-8-2023"
}
let description = `I have ordered ${quantity} ${productName} from 'amazon' last week and estimate delivery for this product is ${estimateDelivery()} and following is the status : status of the product is ${status === 'delivered' ? 'green' : 'red'}`
console.log(description)
